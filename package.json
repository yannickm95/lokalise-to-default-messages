{
  "name": "lokalise-to-default-messages",
  "version": "0.4.2",
  "description": "Utility to update defaultMessages in source code with values from translation json file",
  "homepage": "https://github.com/yannickm95/lokalise-to-default-messages#readme",
  "author": "Yannick Maes <yannick.maes@niprodigital.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yannickm95/lokalise-to-default-messages.git"
  },
  "bugs": {
    "url": "https://github.com/yannickm95/lokalise-to-default-messages/issues"
  },
  "main": "index.js",
  "bin": {
    "ltdm": "bin/cli.js"
  },
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prettier": "prettier --write './**/*.{ts,tsx,js,jsx,json,css,scss}'",
    "lint": "eslint --ext ts,tsx,js,jsx .",
    "postversion": "git push origin main; git push origin --tags",
    "changelog": "auto-changelog -u --hide-credit --commit-limit false"
  },
  "dependencies": {
    "cli-progress": "^3.8.2",
    "colors": "^1.4.0",
    "replace-in-file": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "auto-changelog": "^2.2.1",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "Replace",
    "defaultMessages",
    "translation-file"
  ]
}
