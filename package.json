{
  "name": "lokalise-to-default-messages",
  "version": "0.5.0",
  "description": "Utility to update defaultMessages in source code with values from translation json file",
  "homepage": "https://github.com/yannickm95/lokalise-to-default-messages#readme",
  "author": "Yannick Maes <yannick.maes@niprodigital.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yannickm95/lokalise-to-default-messages.git"
  },
  "bugs": {
    "url": "https://github.com/yannickm95/lokalise-to-default-messages/issues"
  },
  "main": "index.js",
  "bin": {
    "ltdm": "bin/cli.js"
  },
  "directories": {
    "lib": "lib"
  },
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prettier": "prettier --write './**/*.{ts,tsx,js,jsx,json,css,scss}'",
    "lint": "eslint --ext ts,tsx,js,jsx .",
    "release": "standard-version --no-verify",
    "release:tags": "git push --follow-tags origin main",
    "release:github": "conventional-github-releaser -p angular",
    "postrelease": "yarn release:tags && yarn release:github"
  },
  "dependencies": {
    "cli-progress": "^3.8.2",
    "colors": "^1.4.0",
    "replace-in-file": "^6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "conventional-github-releaser": "^3.1.5",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "Replace",
    "defaultMessages",
    "translation-file"
  ]
}
